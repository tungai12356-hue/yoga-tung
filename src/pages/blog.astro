---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Blog - Yoga Tung">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Blog</h1>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {sortedPosts.map((post) => (
        <article class="border rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h2 class="text-2xl font-semibold mb-2">
            <a href={`/blog/${post.slug}`} class="hover:underline">
              {post.data.title}
            </a>
          </h2>
          <time class="text-sm text-gray-600" datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <p class="mt-4 text-gray-700">{post.data.description}</p>
          {post.data.tags && (
            <div class="mt-4 flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-200 rounded text-sm">{tag}</span>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </main>
</Layout>
